<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE probedesc PUBLIC "-//jrds//DTD Probe Description//EN"
	"urn:jrds:probedesc">
<probedesc>
	<name>ApacheStatus</name>
	<probeName>apachestatus_${index}</probeName>
	<probeClass>jrds.probe.ApacheStatus</probeClass>
	<defaultargs>
		<attr name="port">80</attr>
		<attr name="file">/server-status</attr>
	</defaultargs>
	<ds>
		<dsName>Total Accesses</dsName>
		<dsType>counter</dsType>
	</ds>
	<ds>
		<dsName>Total kBytes</dsName>
		<dsType>counter</dsType>
	</ds>
	<ds>
		<dsName>CPULoad</dsName>
		<dsType>gauge</dsType>
	</ds>
<!--  	<ds>
		<dsName>Uptime</dsName>
		<dsType>none</dsType>
	</ds>-->
	<ds>
		<dsName>ReqPerSec</dsName>
		<dsType>gauge</dsType>
	</ds>
	<ds>
		<dsName>BytesPerSec</dsName>
		<dsType>gauge</dsType>
	</ds>
	<ds>
		<dsName>BytesPerReq</dsName>
		<dsType>gauge</dsType>
	</ds>
	<ds>
		<dsName>BusyWorkers</dsName>
		<dsType>gauge</dsType>
	</ds>
	<ds>
		<dsName>IdleWorkers</dsName>
		<dsType>gauge</dsType>
	</ds>
	<graphs>
		<name>ApacheRequests</name>
		<name>ApacheTransfer</name>
		<name>ApacheWorkers</name>
	</graphs>
</probedesc>
