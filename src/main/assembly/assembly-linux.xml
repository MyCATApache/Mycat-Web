<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${timestamp}-linux</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/webapp</directory>
			<outputDirectory>mycat-web/mycat-web/</outputDirectory>
			<includes>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/etc</directory>
			<outputDirectory>mycat-web/etc/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/lib</directory>
			<outputDirectory>mycat-web/lib/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/other</directory>
			<outputDirectory>mycat-web/</outputDirectory>
			<fileMode>0755</fileMode>
			<excludes>
				<exclude>*.bat</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>